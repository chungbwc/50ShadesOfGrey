import flash.display.Shape;var square:Shape = new Shape();var shades:uint = 50;var step:uint = 256 / shades;var w:uint = stage.stageWidth / shades;addChild(square);for (var i:uint=0; i<shades; i++){	var grey:uint = Math.floor(i * step);	var col:uint = (grey << 16) + (grey << 8) + grey;	square.graphics.beginFill(col);	square.graphics.drawRect(i*w, 0, (i+1)*w, stage.stageHeight);	square.graphics.endFill();}